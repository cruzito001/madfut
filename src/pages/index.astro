---
import Layout from '../layouts/Layout.astro';
import LatestSBC from '../components/LatestSBC/LatestSBC';
import BentoGrid from '../components/BentoGrid/BentoGrid';
---

<Layout title="MadFut">
  <main>
    <h1>Welcome to MadFut Community</h1>
    <LatestSBC client:load />
    <BentoGrid client:load />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 0.5rem;
    width: 100%;
    max-width: 100%;
    color: #333;
    font-size: 20px;
    line-height: 1.6;
    box-sizing: border-box;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 0.5em;
  }

  @media (min-width: 768px) {
    h1 {
      font-size: 3rem;
    }
  }
</style>

