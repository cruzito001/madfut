---
import Header from '../components/Header/Header';
import Footer from '../components/Footer/Footer';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="MadFut - SBC and FATAL squads" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&family=Ubuntu:wght@300;400;500;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header client:load />
		<main class="content">
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--font-montserrat: 'Montserrat', sans-serif;
		--font-ubuntu: 'Ubuntu', sans-serif;
		--content-width: 800px;
	}

	html {
		font-family: var(--font-montserrat);
		background: #fff;
	}

	body {
		margin: 0;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.content {
		max-width: var(--content-width);
		margin: 0 auto;
		padding: 2rem 1rem;
		flex: 1;
	}
</style>

