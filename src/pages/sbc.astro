---
import Layout from '../layouts/Layout.astro';
import SBCGrid from '../components/SBC/SBCGrid';
---

<Layout title="MadFut - SBC">
  <main>
    <h1>Squad Building Challenges</h1>
    <SBCGrid client:load />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem 0;
    width: 100%;
    max-width: 100%;
    color: #333;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    padding: 0 1rem;
  }

  @media (min-width: 768px) {
    main {
      max-width: var(--content-width);
      padding: 1rem;
    }
  }
</style>

